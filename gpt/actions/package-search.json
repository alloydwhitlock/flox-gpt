{
  "openapi": "3.1.0",
  "info": {
    "title": "Flox Catalog Package Search",
    "description": "Search the Flox Catalog for packages. The Flox Catalog contains packages from Nixpkgs and custom user-published packages.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://hub.flox.dev",
      "description": "FloxHub Production Server"
    }
  ],
  "paths": {
    "/api/v1/catalog/search": {
      "get": {
        "operationId": "searchPackages",
        "summary": "Search for packages in the Flox Catalog",
        "description": "Search the Flox Catalog for packages by name or description. Returns matching packages with their versions, descriptions, and supported systems. This is equivalent to running `flox search <query>` in the CLI.",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "description": "Search query string. Can be a package name, partial name, or keyword.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "Maximum number of results to return (default: 10, max: 100)",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "system",
            "in": "query",
            "required": false,
            "description": "Filter by target system architecture",
            "schema": {
              "type": "string",
              "enum": [
                "x86_64-linux",
                "aarch64-linux",
                "x86_64-darwin",
                "aarch64-darwin"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful search results",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResults"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Package": {
        "type": "object",
        "properties": {
          "pkg_path": {
            "type": "string",
            "description": "The full package path in the catalog (e.g., 'nodejs' or 'python3Packages.requests')"
          },
          "name": {
            "type": "string",
            "description": "Package name"
          },
          "version": {
            "type": "string",
            "description": "Package version"
          },
          "description": {
            "type": "string",
            "description": "Package description"
          },
          "license": {
            "type": "string",
            "description": "Package license"
          },
          "systems": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Supported system architectures"
          }
        }
      },
      "SearchResults": {
        "type": "object",
        "properties": {
          "results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Package"
            }
          },
          "total": {
            "type": "integer",
            "description": "Total number of matching packages"
          },
          "has_more": {
            "type": "boolean",
            "description": "Whether there are more results available"
          }
        }
      }
    }
  }
}
